colvarstrajfrequency 100
colvar { 
  name prot_orientation
  orientation {
    atoms {
      psfSegID A
      atomNameResidueRange CA 696-992
    }
    refpositionsfile my_2jiu_caB1.pdb
    refpositionscol B
  }
}

colvar {
  name prot_position
    distance {
	group1 {
           psfSegID A
           atomNameResidueRange CA 696-992
	}
	group2 {
	    dummyatom (0.0, 0.0, 0.0)
	}
    }
}

harmonic {
  name prot_fixor
  colvars prot_orientation
  forceconstant 100.0
  centers (1.0 , 0.0 , 0.0 , 0.0)
}

harmonic {
    name prot_nodrift
    colvars prot_position
    forceconstant 100.0
    centers 0.0
}

